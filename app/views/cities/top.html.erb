<h1>Топ городов по отправлению</h1>
<table class="table table-striped table-hover">
    <thead class="">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Count</th>
        </tr>
    </thead>
    <tbody>
        <% @cities.each do |city| %>
        <tr>
            <td><%= city["id"] %></td>
                <td><%= city["name"] %></td>
                <td><%= city["count"] %></td>
        <% end %>
        </tr>
    </tbody>
</table>